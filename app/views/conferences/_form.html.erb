<%= form_for(@conference) do |f| %>
  <% if @conference.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@conference.errors.count, "error") %> prohibited this conference from being saved:</h2>

      <ul>
      <% @conference.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br /><h3>Required Information</h3>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :startdate %><br />
    <%= f.date_select :startdate %>
  </div>
  <div class="field">
    <%= f.label :enddate %><br />
    <%= f.date_select :enddate %>
  </div>
  <div class="field">
    <%= f.label :categories %><br />
    <%= f.collection_select :category_ids, @categories, :id, :name, {:selected => @conference.category_ids}, {:multiple => true} %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <br /><h3>Optional Information</h3>
  <div class="field">
    <%= f.label :gps %><br />
    <%= f.text_field :gps %>
  </div>
  <div class="field">
    <%= f.label :venue %><br />
    <%= f.text_field :venue %>
  </div>
  <div class="field">
    <%= f.label :accomodation %><br />
    <%= f.text_field :accomodation %>
  </div>
  <div class="field">
    <%= f.label :howtofind %><br />
    <%= f.text_field :howtofind %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
