<h1>Listing series</h1>

<% if is_admin? %>
<p>
  <%= link_to 'New Serie', new_serie_path %>
</p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @series.each do |serie| %>
  <tr>
    <td><%= link_to serie.name, serie %></td>
    <% if is_admin? %>
      <td><%= link_to 'Edit', edit_serie_path(serie) %></td>
      <td><%= link_to 'Destroy', serie, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>
