<h2>Status page</h2>

<div class="box">
  <h3>About <%= @user.username %></h3>
  <% if @user.blank? %>
    ERROR: No user information available. Who are you?
  <% else %>
    <ul>
      <li>Username: <%= @user.username %></li>
      <li>Full Name: <%= @user.fullname %></li>
      <li>Email: <%= @user.email %></li>
      <li>Town: <%= @user.town %></li>
      <li>Country: <%= @user.country %></li>
      <li>GPS: <%= @user.gps %></li>
      <li>Admin: <%= @user.admin %></li>
      <% if @user == @current_user %>
        <li><%= link_to 'Change password', edit_password_path(@user)%></li>
      <% end %>
    </ul>
  <% end %>
</div>

<div class="subcolumns">
  <div class="c50l">
    <div class="subcl box">
      <h3>Your Notifications</h3>
      <% if @notifications.blank? %>
        You currently don't have any notifications
      <% else %>
        <ul>
          <% @notifications.each do |n| %>
            <li><%= l(n.created_at, :format => :long) %>:
                <%= n.content %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="c50r">
    <div class="subcr box">
      <h3>Your Calendars</h3>
      <% if @calendars.blank? %>
        You currently don't have any calendars
      <% else %>
        <ul>
          <% @calendars.each do |c| %>
            <li><%= c.name %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="subcolumns">
  <div class="c50l">
    <div class="subcl box">
      <h3>Friend Requests Sent</h3>
      <% if @friend_requests_sent.blank? %>
        No open friend requests originated by you
      <% else %>
        <ul>
          <% @friend_requests_sent.each do |r| %>
            <li><%= r.username %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="c50r">
    <div class="subcr box">
      <h3>Friend Requests Received</h3>
      <% if @friend_requests_received.blank? %>
        No open friend requests for you
      <% else %>
        <ul>
          <% @friend_requests_received.each do |r| %>
            <li><%= r.username %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>



