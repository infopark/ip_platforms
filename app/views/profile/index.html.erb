<h2>Your status page</h2>

<div class="box">
  <h3>About you</h3>
  <% if @current_user.blank? %>
    ERROR: No user information available. Who are you?
  <% else %>
    <ul>
      <li>Username: <%= @current_user.username %></li>
      <li>Full Name: <%= @current_user.fullname %></li>
      <li>Email: <%= @current_user.email %></li>
      <li>Town: <%= @current_user.town %></li>
      <li>Country: <%= @current_user.country %></li>
      <li>GPS: <%= @current_user.gps %></li>
      <li>Admin: <%= @current_user.admin %></li>
      <li>Admin: <%= @current_user.admin %></li>
      <li><%= link_to 'Change password',
        edit_password_path(@current_user)%></li>
    </ul>
  <% end %>
</div>

<div class="subcolumns">
  <div class="c50l">
    <div class="subcl box">
      <h3>Your Notifications</h3>
      <% if @notifications.blank? %>
        You currently don't have any notifications
      <% else %>
        <ul>
          <% @notifications.each do |n| %>
            <li><%= l(n.created_at, :format => :long) %>:
                <%= n.content %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="c50r">
    <div class="subcr box">
      <h3>Your Calendars</h3>
      <% if @calendars.blank? %>
        You currently don't have any calendars
      <% else %>
        <ul>
          <% @calendars.each do |c| %>
            <li><%= c.name %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>

<div class="subcolumns">
  <div class="c50l">
    <div class="subcl box">
      <h3>Friend Requests Sent</h3>
      <% if @friend_requests_sent.blank? %>
        No open friend requests originated by you
      <% else %>
        <ul>
          <% @friend_requests_sent.each do |r| %>
            <li><%= r.username %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>

  <div class="c50r">
    <div class="subcr box">
      <h3>Friend Requests Received</h3>
      <% if @friend_requests_received.blank? %>
        No open friend requests for you
      <% else %>
        <ul>
          <% @friend_requests_received.each do |r| %>
            <li><%= r.username %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>



