<%= form_tag edit_password_path(@user),
  :url => { :controller => 'members', :action => 'edit_password' } do |f| -%>
<% unless is_admin? %>
<div class="label"><%= label_tag :old_password, 'Old Password' %></div>
<div class="field"><%= password_field_tag :old_password %></div>
<% end %>
<div class="label"><%= label_tag :new_password, 'New Password' %></div>
<div class="field"><%= password_field_tag :new_password %></div>
<div class="label"><%= label_tag :new_password_confirm, 'Confirm New Password' %></div>
<div class="field"><%= password_field_tag :new_password_confirm %></div>
<%= submit_tag 'Set new Password' %>
<% end -%>
